Private Sub CommandButton1_Click()

Dim ust As Worksheet
Dim kol As Double
Set ust = Worksheets("ustawienia")

ust.ListObjects("tab_do_kat").ListColumns.Add.Name = Me.TextBoxFirma.Value
ust.ListObjects("tab_ind").ListColumns.Add.Name = Me.TextBoxFirma.Value

kol = ust.Range("tab_do_kat").Columns.Count
ust.ListObjects("tab_do_kat").ListColumns(kol).DataBodyRange.Select
Selection.FillRight

ust.ListObjects("tab_ind").ListColumns(kol).DataBodyRange.Select
Selection.FillRight

Unload Me

End Sub
